#devise
  %h1= t 'devise.messages.sign_in_full'

  #form-detail
    = form_for resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal'}  do |f|

      - if params[:action] == 'create'
        .alert.alert-error
          %button.close{:data => {:dismiss => 'alert'}}
            Ã—
          = t 'errors.messages.login'

      .control-group
        = f.label :email, :class => 'control-label'
        .controls
          = f.text_field :email

      .control-group
        = f.label :password, :class => 'control-label'
        .controls
          = f.password_field :password

          %p.help-block
            %label.checkbox
              = f.check_box :remember_me
              = t 'activerecord.attributes.user.remember_me'
              %span.inline.pull-right{:style => 'margin-right: 30px;'}
                = link_to t('devise.messages.forgot_password'), new_password_path(resource_name)

      .controls
        = f.submit t('devise.messages.sign_in'), :class => 'btn btn-info'


